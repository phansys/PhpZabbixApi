{
    "name": "confirm-it-solutions/php-zabbix-api",
    "type": "library",
    "description": "PhpZabbixApi library",
    "keywords": ["zabbix", "api"],
    "homepage": "https://github.com/confirm/PhpZabbixApi",
    "license": "MIT",
    "authors": [
        {
            "name": "Dominique Barton",
            "email": "phpzabbixapi@confirm.ch",
            "homepage": "http://www.confirm.ch",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.3|^7.0",
        "ext-bcmath": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pcre": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^1.13|^2.16",
        "phpunit/phpunit": "<4.8.35|<5.4.3,>=5.0"
    },
    "suggest": {
        "ext-posix": "In order to get the real user ID of the current process."
    },
    "autoload": {
        "psr-4": { "ZabbixApi\\": ["src/"] }
    },
    "autoload-dev": {
        "psr-4": { "ZabbixApi\\Tests\\": ["tests/"] }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        }
    }
}
